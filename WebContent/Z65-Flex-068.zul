    </window>
    <window border="normal" height="360px"
        title="minimum Flex: [Colorbox, Vbox, rounded]" width="480px">
        <vbox height="200px" hflex="min">
            <colorbox hflex="1" vflex="1"/>
            <colorbox vflex="1" width="75px"/>
            <colorbox vflex="1" width="120px"/>
        </vbox>
    </window>
</hbox>
