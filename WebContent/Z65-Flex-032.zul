<zk><hbox>
    <window border="normal" height="360px"
        title="Proportional Flexibility: [Hbox, Hlayout]" width="480px">
        <hlayout height="200px" width="200px">
            <hbox height="200px" hflex="1">
                <div hflex="1" style="background:cyan">
                    <label value="1"/>
                </div>
                <div hflex="2" style="background:yellow">
                    <label value="1"/>
                </div>
            </hbox>
            <hbox height="200px" hflex="2">
                <div hflex="1" style="background:cyan">
                    <label value="1"/>
                </div>
                <div hflex="2" style="background:yellow">
                    <label value="1"/>
                </div>
            </hbox>
        </hlayout>
    </window>
    <window border="normal" height="360px"
        title="Proportional Flexibility: [Hbox, Hbox]" width="480px">
        <hbox height="200px" width="200px">
            <hbox height="200px" hflex="1">
                <div hflex="1" style="background:cyan">
                    <label value="1"/>
                </div>
                <div hflex="2" style="background:yellow">
                    <label value="1"/>
                </div>
            </hbox>
            <hbox height="200px" hflex="2">
                <div hflex="1" style="background:cyan">
                    <label value="1"/>
                </div>
                <div hflex="2" style="background:yellow">
                    <label value="1"/>
                </div>
            </hbox>
        </hbox>
    </window>
</hbox>
</zk>